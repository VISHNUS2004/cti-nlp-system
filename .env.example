# Example environment file for CTI-NLP System
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://cti_user:cti_password123@localhost:5432/cti_nlp
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cti_nlp
DB_USER=cti_user
DB_PASSWORD=cti_password123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=1.0.0
DEBUG=true

# External API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
MITRE_API_KEY=your_mitre_api_key_if_needed

# Model Configuration
MODEL_PATH=./models
CONFIDENCE_THRESHOLD=0.7
MAX_TEXT_LENGTH=5000

# Ingestion Settings
INGESTION_INTERVAL_MINUTES=10
MAX_RECORDS_PER_INGESTION=1000
ENABLE_REAL_TIME_INGESTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/cti-nlp.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
RATE_LIMIT_PER_MINUTE=60
JWT_SECRET_KEY=your-jwt-secret-key-here

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Docker specific (when running in containers)
DOCKER_NETWORK=cti-network
CONTAINER_PORT=8000

# Production specific settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://your-domain.com"]
# DATABASE_URL=postgresql://user:password@prod-db:5432/cti_nlp_prod
# REDIS_URL=redis://prod-redis:6379/0
